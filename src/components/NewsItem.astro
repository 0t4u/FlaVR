---
interface Props {
    url: string;
    title: string;
    description: string;
    date: Date;
    image?: string;
}

const { url, title, description, date, image } = Astro.props;
---
<li>
    <a class="flex flex-col rounded-md shadow p-4 cursor-pointer bg-rosePineDawn-surface dark:bg-rosePineMoon-surface hover:bg-rosePineDawn-overlay dark:hover:bg-rosePineMoon-overlay" href={url}>
        <p class="text-xs text-rosePineDawn-text/90 dark:text-rosePineMoon-text/90">{date.toLocaleString(Astro.currentLocale, { dateStyle: "long" })}</p>
        <h3 class="text-2xl font-bold">{title}</h3>
        <p class="text-rosePineDawn-text/90 dark:text-rosePineMoon-text/90">{description}</p>
    </a>
</li>
