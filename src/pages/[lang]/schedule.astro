---
import * as m from "~/paraglide/messages.js";
import Layout from "~/layouts/Layout.astro";
import Container from "~/components/Container.astro";
import { getLangStaticPaths } from "~/util/getLangStaticPaths";

export const getStaticPaths = getLangStaticPaths;
const LiveVideoIds = [
    "ox_OSNBKrY4",
    "fHbmgharsL4",
    "6NE_u1tCCMg",
    // Add more video IDs here
];
const UpcomingVideoIds = [
    "ox_OSNBKrY4",
    "fHbmgharsL4",
    "6NE_u1tCCMg",
];
---
<script>
    import "lite-youtube-embed";
    import "lite-youtube-embed/src/lite-yt-embed.css";
</script>

<Layout title={m.schedule()}>
    <Container>
        <h2 class="text-4xl font-extrabold dark:text-white">Live</h2>
        <hr>
        <br>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {LiveVideoIds.map((vid) => (
            <div class="relative">
                <lite-youtube videoid={vid} params="autoplay=1"></lite-youtube>
            </div>
        ))}
        </div>
        <h2 class="text-4xl font-extrabold dark:text-white">Upcoming</h2>
        <hr>
            <br>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {UpcomingVideoIds.map((vid) => (
                <lite-youtube videoid={vid} params="autoplay=1"></lite-youtube>
            ))}
        </div>
    </Container>
</Layout>
