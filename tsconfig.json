{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src",
    ".eslintrc.js",
    "eslint.config.js",
    "tailwind.config.js",
    "astro.config.js",
    "svelte.config.js",
  ],
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "Bundler",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
    }
  },
}